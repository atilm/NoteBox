<Window x:Class="NoteBox.Windows.NoteEditorWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:Controls="clr-namespace:NoteBox.Controls"
        xmlns:Windows="clr-namespace:NoteBox.Windows"
        mc:Ignorable="d"
        Title="Note Editor" Height="450" Width="800">
    <Window.InputBindings>
        <KeyBinding Key="L" Modifiers="Control"
                    Command="{Binding Path=InsertLinkCommand}" />
    </Window.InputBindings>
    <DockPanel>
        <Button Command="{Binding InsertLinkCommand}">Link</Button>
        <Controls:NoteEditor DataContext="{Binding EditorViewModel}" />
    </DockPanel>
</Window>